/* pages/orderList/orderList.wxss */
.orderList-container .tabs {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 12px;
}

.orderList-container .tabs .tab-item {
  height: 80rpx;
  width: 187rpx;
  text-align: center;
  line-height: 80rpx;
}

.orderList-container .tabs .active {
  border-bottom: 2px solid #f45;
  color: #f45;
}

.orderList-container .order-goods {
  margin-top: 20rpx;
}

.orderList-container .order-goods .order-goods-item {
  display: flex;
  align-items: center;
}

.orderList-container .order-goods .order-goods-item image {
  width: 200rpx;
  height: 200rpx;
}

.orderList-container .order-goods .order-goods-item .right .goods-name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 400rpx;
  height: 150rpx;
}

.orderList-container .order-goods .order-goods-item .right .others {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 10px;
}

.orderList-container .order-goods .order-goods-item .right .others .price {
  color: #f45;
}

.orderList-container .paymoney {
  position: fixed;
  bottom: 40rpx;
  width:750rpx;
  height: 80rpx;
  border-radius: 40rpx;
  line-height:80rpx;
}