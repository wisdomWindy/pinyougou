/* components/goods/goods.wxss */
 .checkbox-group{
  display: flex;
  height:300rpx;
  align-items: center;
  font-size:12px;
}
 .checkbox-group .goods-image{
  width:200rpx;
  height:200rpx;
}
 .checkbox-group .calcu{
  margin-left:20rpx;
}
.checkbox-group .description {
  position: relative;
  width:500rpx;
  padding-left:20rpx;
  padding-right:20rpx;
}
 .checkbox-group .description .content{
  overflow: hidden;
  text-overflow: ellipsis;
  width:400rpx;
  min-height:100rpx;
}
 .checkbox-group .description .price{
color:red;
}
 .checkbox-group .description .delete{
  width:100rpx;
  height:40rpx;
  position: absolute;
  right:0rpx;
  bottom:20rpx;
  font-size:12px;
  color:#999;
  text-align: center;
}
 .checkbox-group .count{
  display: flex;
  align-items: center;
  justify-content: center;
  width:200rpx;
}
 .checkbox-group .count .mini-btn{
  width:80rpx;
  height:80rpx;
  text-align: center;
}
 .checkbox-group .count .weui-input{
  text-align:center;
}