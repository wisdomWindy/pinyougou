/* pages/order/order.wxss */
.order-container{
  display: flow-root;
  height:100%;
}
.order-container .header{
  position: fixed;
  z-index:3;
  background-color:#fff;
}
.order-container .header .addr {
  height:180rpx;
}
.order-container .header .addr button{
  margin-top:40rpx;
  margin-bottom:20rpx;
  background-color:#eee;
  color:#666;
  font-weight: normal;
}
.order-container .header .show-addr{
  margin-top:40rpx;
  height:180rpx;
}
.order-container .header .show-addr .receiver{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding:0 10rpx;
  font-size:14px;
  color:#999;
}
.order-container .header .show-addr .address{
  padding:0 10rpx;
  display: flex;
  align-items: center;
  margin-top:20rpx;
  font-size:14px;
  color:#999;
}
.order-container .header .border-image{
  width:750rpx;
  height:15rpx;
}
.order-container .order-list{
  height:950rpx;
}
.order-container .order-list .order-item{
  display: flex;
  align-items: center;
  margin-top:20rpx;
}
.order-container .order-list .order-item image{
  width:200rpx;
  height:200rpx;
}
.order-container .order-list .order-item .right .introduce{

  overflow: hidden;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
  width:550rpx;
}
.order-container .order-list .order-item .right .cash{
  display: flex;
  justify-content:flex-start;
  align-items: center;
  padding:0 10rpx;
 
}
.order-container .order-list .order-item .right .cash .price{
  color:red;
  font-size:14px;
}
.order-container .footer{
  position: fixed;
  z-index:3;
  bottom:0;
  display: flow-root;
  width:750rpx;
  height:200rpx;
  background-color:#fff;
}
.order-container .footer .money{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:0 10rpx;
  font-size:13px;
  color:#999;
}
.order-container .footer .deliver-fee{
  display:flex;
  justify-content: space-between;
  align-items: center;
  padding:0 10rpx;
  font-size:13px;
  color:#999;
}
.order-container .footer button{
  background-color:#eee;
  color:#666;
  margin-bottom:10rpx;
  font-weight:normal;
}