/* pages/cart/cart.wxss */
.cart-container{
  height:100%;
  display:flow-root;
}
.cart-container .title{
  width:750rpx;
  height:100rpx;
  margin-left:30rpx;
  position: fixed;
  z-index:3;
  background-color:#fff;
}
.cart-container .title image{
  width:60rpx;
  height:60rpx;
}
.cart-container .items{
  height:100vh;
}
.cart-container .cart-item{
  height:auto;
}
.cart-container .cart-item .empty-cart{
  width:750rpx;
  height:100%;
}
.cart-container .cart-item .empty-cart image{
  width:100%;
  height:700rpx;
}
.cart-container .pay-wrapper{
  display: flow-root;
}
.cart-container .pay-wrapper .pay{
  display: flex;
  align-items: center;
  height:100rpx;
  width:750rpx;
  justify-content: space-between;
  font-size:10px;
  color:#999;
  position: fixed;
  bottom:0;
  z-index:3;
  background-color:#fff;
}
.cart-container .pay-wrapper .pay .submit-pay{
  background-color:#f45;
  color:#fff;
  font-size:10px;
  width:200rpx;
  height:100rpx;
  line-height:100rpx;
  text-align:center;
}
.cart-container  .pay  .total-price{
  color:#f45;
}
